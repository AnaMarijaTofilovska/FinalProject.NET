@*  renders the recipe cards for each item on our Menu & Recipe page *@


@model IEnumerable<FinalProject.Models.Recipe>

@foreach (var recipe in Model)
{
    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 mb-3">
        <div class="shadow rounded p-2">
            <div class="card sweetsCard">
                <img src="@recipe.Image_url" class="card-img-top h-50" />
                <div class="card-body">
                    <p class="card-title fw-bold fs-15 text-pink"> 
                        @recipe.Title
                        </p>
                    <span class="card-text">@recipe.Publisher</span>
                    <div class="d-flex flex-wrap justify-content-between">
                        <a href="/Recipe/Order?id=@recipe.Id" 
                        class="btn btn-sm btn-mint btn-primary shadow rounded p-2">Options</a>
                        <span class="addToCartIcon" onclick="cart.call(this)"
                              data-recipeId="@recipe.Id">
                            <i class="fa-regular fa-heart fs-3"></i>
                            </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}